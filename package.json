{
  "name": "wipshare-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "WipShare - A minimalist platform for musicians to share works in progress",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "npm run dev --workspace=apps/api",
    "dev:web": "npm run dev --workspace=apps/web",
    "build": "npm run build --workspaces",
    "build:api": "npm run build --workspace=apps/api",
    "build:web": "npm run build --workspace=apps/web",
    "vercel-build": "cd apps/web && npm install && npm run build",
    "type-check": "npm run type-check:api && npm run type-check:web",
    "type-check:api": "cd apps/api && npx tsc --noEmit",
    "type-check:web": "cd apps/web && npx tsc --noEmit",
    "test:build": "npm run type-check && npm run build",
    "start": "npm run start --workspace=apps/api",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "install:all": "npm install && npm install --workspaces",
    "prepare": "husky || true"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^9.1.7"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@types/fluent-ffmpeg": "^2.1.27",
    "axios": "^1.11.0",
    "firebase": "^12.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "googleapis": "^155.0.1"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.9.5"
  }
}
