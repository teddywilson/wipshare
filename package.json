{
  "name": "wipshare-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "WipShare - A minimalist platform for musicians to share works in progress",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=apps/backend",
    "dev:frontend": "npm run dev --workspace=apps/frontend",
    "build": "npm run build --workspaces",
    "build:backend": "npm run build --workspace=apps/backend",
    "build:frontend": "npm run build --workspace=apps/frontend",
    "type-check": "npm run type-check:backend && npm run type-check:frontend",
    "type-check:backend": "cd apps/backend && npx tsc --noEmit",
    "type-check:frontend": "cd apps/frontend && npx tsc --noEmit",
    "test:build": "npm run type-check && npm run build",
    "start": "npm run start --workspace=apps/backend",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "install:all": "npm install && npm install --workspaces",
    "prepare": "husky"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^9.1.7"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@types/fluent-ffmpeg": "^2.1.27",
    "axios": "^1.11.0",
    "firebase": "^12.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "googleapis": "^155.0.1"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.9.5"
  }
}
